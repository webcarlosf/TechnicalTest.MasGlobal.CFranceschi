
@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <script src="~/js/App/IndexEmploy.js"></script>
</head>
<body>
    <div>
        <div class="row bg-title">
            <div class="panel panel-primary">
                <div class="panel-heading"><h2 class="page-title">@ViewBag.Title</h2></div>
            </div>
        </div>


        <div class="form-group row">
            <div class="input-group mb-2 mr-sm-2 mb-sm-0">
                <div class="input-group-addon">Id Employee</div>
                <input type="number" class="form-control" id="txtIdEmployee">
            </div>
            <div class="form-group">
                <a href="#" class="btn btn-primary pull-right" id="btnSearch">Search</a>
            </div>
        </div>

        <div class="row">
            <table id="tblEmployee" class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Id Employee</th>
                        <th>Employee Name</th>
                        <th>Contract Type</th>
                        <th>Role Name</th>
                        <th>Rol Description</th>
                        <th>Hourly Salary</th>
                        <th>Monthly Salary</th>
                        <th>Annual Salary</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
</body>
</html>

